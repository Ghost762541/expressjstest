extends ../header.pug

block content

  a.btn.btn-success.col-1.my-3(href="/accounts/new") Add
  
  div.container.list-group.mx-3
    each account in accounts 
      div.row
        a.list-group-item.col-10.my-2(href="/accounts/" + account.accountId + "/users")= account.titleAccount
        a.btn.btn-danger.col-1.mx-5.my-2(href="/accounts/delete/" + account.accountId + "") Delete
      