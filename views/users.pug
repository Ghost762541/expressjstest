html
  head
    title="Аккаунты"
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body.container
    include ./header.pug
    a.btn.btn-success.col-1.my-3(href="/users/new") Add
    div.container.list-group.mx-3
      each user in users 
        div.row
          p.list-group-item.col-10.my-2= user.titleUser
          p.list-group-item.col-10.my-2=user.accountId
          a.btn.btn-danger.col-1.mx-5.my-2(href="users/delete/" + user._id) Delete